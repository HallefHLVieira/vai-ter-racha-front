generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(uuid())
  name      String
  phone     String   @unique
  password  String
  role      Role     @default(JOGADOR)
  players   Player[]
  invitedPlayers Player[] @relation("InvitedPlayers")

}

model Match {
  id        String   @id @default(uuid())
  date      DateTime
  location  String
  players   Player[]
  maxPlayers Int @default(22)
  createdAt DateTime @default(now())
}

model Player {
  id        String  @id @default(uuid())
  matchId   String
  match     Match   @relation(fields: [matchId], references: [id])
  userId    String?
  user      User?    @relation(fields: [userId], references: [id])
  invitedById String?   // id do usu√°rio que convidou
  invitedBy    User?     @relation("InvitedPlayers", fields: [invitedById], references: [id])
  invitePlayerName String?
  confirmed Boolean @default(false)
  checkedIn Boolean @default(false)
}

enum Role {
  ADMIN
  JOGADOR
}
